# EditorConfig is awesome: https://EditorConfig.org

# Общие настройки для всех файлов
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# Настройки для Markdown файлов
[*.md]
trim_trailing_whitespace = false

# Настройки для JSON файлов
[*.json]
indent_size = 2

# Настройки для TypeScript и JavaScript
[*.{js,jsx,ts,tsx}]
indent_size = 2

# Настройки для CSS и SCSS
[*.{css,scss}]
indent_size = 2

# Настройки для HTML файлов
[*.html]
indent_size = 2
